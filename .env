########################################
# 🌍 CONFIGURATION FOR TRADING BOT API #
########################################

# -------- General App Settings --------
APP_NAME=TradingBot
APP_ENV=dev             # אפשרויות: dev / prod
APP_VERSION=0.1.0
LOG_LEVEL=info          # debug / info / warning / error
PORT=8000

# -------- Security Settings --------
# קובץ זה לא עולה ל-GitHub!
SECRET_KEY=change_this_to_a_long_random_string
ALLOWED_HOSTS=127.0.0.1,localhost

# -------- API Behavior --------
REQUEST_TIMEOUT=10      # שניות
CACHE_ENABLED=True
RETRY_ON_FAILS=True

# -------- Trading Parameters --------
# ניתן לשנות לפי אסטרטגיה
DEFAULT_TICKER=AAPL
DEFAULT_PERIOD=6mo
DEFAULT_INTERVAL=1d
DEFAULT_CAPITAL=10000
RISK_PER_TRADE=0.01

# -------- External APIs --------
# (כאן תוכלי להוסיף בעתיד גישה למקורות אחרים)
YFINANCE_ENABLED=True
ALPHA_VANTAGE_API_KEY=   # אופציונלי – אם תשתמשי בשירות חיצוני

# -------- Database (Future-Ready) --------
DB_ENGINE=sqlite
DB_PATH=/app/data/trading.db
# לדוגמה ל-PostgreSQL (אם תתרחי):
# DB_ENGINE=postgresql
# DB_HOST=db
# DB_PORT=5432
# DB_USER=trading_user
# DB_PASSWORD=supersecret
# DB_NAME=trading_bot

# -------- Monitoring & Health --------
HEALTHCHECK_PATH=/healthz
ENABLE_METRICS=True

# -------- Dev Settings --------
DEBUG=True
RELOAD=True